<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight" />

    <style name="MainText" parent="TextAppearance.AppCompat" >
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="MainText.extraSmall">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="MainText.small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MainText.medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainText.large">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Header Container -->
    <style name="HeaderContainer">
        <item name="android:background">?colorSecondary</item>
        <item name="android:padding">@dimen/global_small_padding</item>
    </style>

    <!-- Reversed Header -->
    <style name="ReversedHeader" parent="MainText.extraSmall">
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/global_small_padding</item>
    </style>

</resources>